{
    "version": "0.2",
    "$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/cspell.schema.json",
    "language": "en",
    "allowCompoundWords": true,
    "useGitignore": true,
    "files": ["**/*"],
    "ignorePaths": [
        "*.csproj",
        "*.jq",
        "*.proto", 
        "go.mod", 
        "go.sum", 
        "go.work.sum"
    ],
    "ignoreRegExpList": 
    [ 
        // ignore gomarkdoc output
        "/^<!-- Code generated by gomarkdoc. DO NOT EDIT -->[\\s\\S]*/",
        // ignore codegen output
        "/<auto-generated>[\\s\\S]*/"
    ],
    "dictionaryDefinitions": [
        { "name": "dtdl",  "path": "dictionaries/dtdl.txt"  },
        { "name": "mqtt",  "path": "dictionaries/mqtt.txt"  },
        { "name": "gosdk", "path": "dictionaries/gosdk.txt" }
    ],
    "dictionaries": ["mqtt", "dtdl"],
    "words": [
        "Akri",
        "avrogen",
        "cbor",
        "Codegen",
        "codespace",
        "Codespaces",
        "cotype",
        "cotyped",
        "decapitalize",
        "decapitalizer",
        "delayable",
        "demultiplexer",
        "faultable",
        "iotoperations",
        "jetstack",
        "Metl",
        "MSLT",
        "msrc",
        "mqttbroker",
        "mypassword",
        "myvalue",
        "PKID",
        "PKIDs",
        "protoc",
        "reauth",
        "reauthentication",
        "reconnections",
        "REFSTRUCT",
        "repr",
        "resps",
        "retriable",
        "retryable",
        "retrypolicy",
        "sessionclient",
        "standardizer",
        "standardizers",
        "statestore",
        "subnamespace",
        "tcpport",
        "telem",
        "Textualizer",
        "toplevel",
        "triggerable",
        "uniquifiers",
        "unmarshals",
        "unobserve",
        "unretriable",
        "unretrievable",
        "unsub",
        "usetls",
        "VDEL",
        "wallclock"
    ],
    "languageSettings": [
        {
            // tt files could contain any language
            "languageId": "*",
            "includeRegExpList": ["**/*.tt"],
            "dictionaries": ["cpp", "dotnet", "rust", "golang", "java"]
        },
        {
            // assume yaml files are k8s definitions
            "languageId": "yaml",
            "dictionaries": ["k8s"]
        },
        // {
        //     // markdown is case sensative
        //     "languageId": "markdown",
        //     "dictionaries": ["softwareTerms"],
        //     "caseSensitive": true
        // },
        {
            // markdown code blocks not case sensative and include additional dicts
            "languageId": "markdown",
            "includeRegExpList": [ "/^```[\\s\\S]*?```/gm" ],
            "dictionaries": ["bash"],
            "caseSensitive": false
        },
        {
            // go specific words
            "languageId": "go",
            "dictionaries": ["gosdk"]
        },
        {
            "languageId": "csharp",
            "words": [
                "xunit"
            ]
        }
    ],      
    "ignoreWords": [],
    "import": []
}
