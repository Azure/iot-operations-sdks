{
    "version": "0.2",
    "$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/cspell.schema.json",
    "language": "en",
    "allowCompoundWords": true,
    "useGitignore": true,
    "files": ["**/*"],
    "ignorePaths": [
        "*.csproj",
        "*.jq",
        "*.proto", 
        "*.toml",
        "go.(mod|sum|work|work.sum)", 
    ],
    "ignoreRegExpList": 
    [ 
        // ignore gomarkdoc output
        "/^<!-- Code generated by gomarkdoc. DO NOT EDIT -->[\\s\\S]*/",
        // ignore codegen output
        "/<auto-generated>[\\s\\S]*/"
    ],
    "dictionaryDefinitions": [
        { "name": "dtdl",    "path": "dictionaries/dtdl.txt"    },
        { "name": "gosdk",   "path": "dictionaries/gosdk.txt"   },
        { "name": "mqtt",    "path": "dictionaries/mqtt.txt"    },
        { "name": "rustsdk", "path": "dictionaries/rustsdk.txt" }
    ],
    "dictionaries": ["mqtt", "dtdl", "softwareTerms"],
    "words": [
        "aarch64",
        "Akri",
        "avrogen",
        "azurecr",
        "cbor",
        "Codegen",
        "codespace",
        "Codespaces",
        "cotype",
        "cotyped",
        "decapitalize",
        "decapitalizer",
        "dedup",
        "delayable",
        "demultiplexer",
        "deque",
        "faultable",
        "iotoperations",
        "jetstack",
        "listify",
        "Metl",
        "MSLT",
        "msrc",
        "mqttbroker",
        "mypassword",
        "myvalue",
        "PKID",
        "PKIDs",
        "protoc",
        "reauth",
        "reauthenticates",
        "reauthentication",
        "reconnections",
        "REFSTRUCT",
        "repr",
        "resps",
        "retriable",
        "retryable",
        "retrypolicy",
        "sessionclient",
        "standardizer",
        "standardizers",
        "statestore",
        "stringifying",
        "subnamespace",
        "telem",
        "Textualizer",
        "toplevel",
        "triggerable",
        "uncacheable",
        "uniquifiers",
        "unmarshals",
        "unobserve",
        "unobtanium",
        "unparseable",
        "unretriable",
        "unretrievable",
        "unsub",
        "VDEL",
        "wallclock",
        "wakeup"
    ],
    "languageSettings": [
        //{
        //     // assume yaml files are k8s definitions
        //     "languageId": "yaml",
        //     "dictionaries": ["k8s"]
        // },
        {
            // markdown is case sensative
            "languageId": "markdown",
            "caseSensitive": true
        },
        {
            // markdown code blocks not case sensative and include additional dicts
            "languageId": "markdown",
            "includeRegExpList": [ "/^```[\\s\\S]*?```/gm" ],
            "dictionaries": ["bash"],
            "caseSensitive": false
        },
        {
            // shell scripts contain language words
            "languageId": "shellscript",
            "dictionaries": ["rust"],
            "words": [
                "gsub"
            ]
        },
        {
            // go specific words
            "languageId": "go",
            "dictionaries": ["gosdk"]
        },
        {
            // rust specific words
            "languageId": "rust",
            "dictionaries": ["rustsdk"]
        },        
        {
            // csharp specific words
            "languageId": "csharp",
            "words": [
                "xunit"
            ]
        }
    ],
    "overrides": [
        { 
            // *.tt files could be any language
            "filename": "**/*.tt",
            "dictionaries": [ "cpp", "dotnet", "rust", "golang", "java"]
        },
        {
            // codegen directory has its own words
            "filename": "codegen/*",
            "words": [
                "avsc",
                "DVER",
                "mqttv",
                "MVER",
                "ndsi",
                "Protos",
                "serde_json",
                "stringish"
            ]
        }
    ],
    "ignoreWords": [],
    "import": []
}
