[
  {
    "@context": [
      "dtmi:dtdl:context;3",
      "dtmi:dtdl:extension:mqtt;1"
    ],
    "@id": "dtmi:jsonTest:TelemetryAndCommand;1",
    "@type": [ "Interface", "Mqtt" ],
    "payloadFormat": "Json/ecma/404",
    "telemetryTopic": "sample/{modelId}/{senderId}/telemetry",
    "commandTopic": "sample/{modelId}/command/{commandName}",
    "contents": [
      {
        "@type": "Telemetry",
        "name": "distance",
        "schema": "double",
        "description": "The total distance from the origin."
      },
      {
        "@type": "Telemetry",
        "name": "color",
        "schema": "string",
        "description": "The color currently being applied."
      },
      {
        "@type": "Command",
        "name": "setColor",
        "request": {
          "name": "newColor",
          "schema": "string"
        },
        "response": {
          "name": "oldColor",
          "schema": "string"
        }
      }
    ]
  }
]
