FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /solution

# Copy solution and project files
COPY *.sln .
COPY samples/SqlConnectorApp/*.csproj samples/SqlConnectorApp/
COPY src/Azure.Iot.Operations.Connector/*.csproj src/Azure.Iot.Operations.Connector/
COPY src/Azure.Iot.Operations.Mqtt/*.csproj src/Azure.Iot.Operations.Mqtt/
COPY src/Azure.Iot.Operations.Services/*.csproj src/Azure.Iot.Operations.Services/

# Restore dependencies
RUN dotnet restore

# Copy source code
COPY . .

# Build and publish
RUN dotnet publish samples/SqlConnectorApp/SqlQualityAnalyzerConnectorApp.csproj -c Release -o /app/publish

FROM mcr.microsoft.com/dotnet/aspnet:8.0
WORKDIR /app
COPY --from=build /app/publish .
ENTRYPOINT ["dotnet", "SqlQualityAnalyzerConnectorApp.dll"]