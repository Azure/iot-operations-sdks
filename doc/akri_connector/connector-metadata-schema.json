{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
      "name": {
        "type": "string"
      },
      "description": {
        "type": "string"
      },
      "version": {
        "type": "string"
      },
      "maintainer": {
        "type": "string"
      },
      "vendor": {
        "type": "string"
      },
      "image": {
        "type": "object",
        "properties": {
          "repository": {
            "type": "string"
          },
          "tag": {
            "type": "string"
          },
          "digest": {
            "type": "string"
          }
        },
        "required": [
          "repository",
          "tag"
        ]
      },
      "helm": {
        "type": "object",
        "properties": {
          "repository": {
            "type": "string"
          },
          "tag": {
            "type": "string"
          },
          "digest": {
            "type": "string"
          }
        },
        "required": [
          "repository",
          "tag"
        ]
      },
      "minimum_kubernetes_version": {
        "type": "string"
      },
      "architecture": {
        "type": "string"
      },
      "sourceCode": {
        "type": "object",
        "properties": {
          "language": {
            "type": "string"
          },
          "languageVersion": {
            "type": "string"
          },
          "SDK": {
            "type": "object",
            "properties": {
              "ProtocolPackageVersion": {
                "type": "string"
              },
              "ServicesPackageVersion": {
                "type": "string"
              },
              "ConnectorPackageVersion": {
                "type": "string"
              }
            },
            "required": [
              "ProtocolPackageVersion",
              "ServicesPackageVersion",
              "ConnectorPackageVersion"
            ]
          }
        },
        "required": [
          "language",
          "languageVersion",
          "SDK"
        ]
      },
      "permissions": {
        "type": "array",
        "items": [
          {
            "type": "string"
          }
        ]
      },
      "resource_requirements": {
        "type": "object",
        "properties": {
          "cpu": {
            "type": "string"
          },
          "memory": {
            "type": "string"
          },
          "storage": {
            "type": "string"
          }
        }
      },
      "aioConfig": {
        "type": "object",
        "properties": {
          "minVersion": {
            "type": "string"
          },
          "maxVersion": {
            "type": "string"
          }
        }
      },
      "protocols": {
        "type": "array",
        "items": [
          {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "version": {
                "type": "string"
              },
              "configSchemas": {
                "type": "object",
                "properties": {
                  "deviceEndpointAdditionalConfigSchema": { "$ref": "http://json-schema.org/draft-04/schema#" },
                  "datasetConfigSchema": { "$ref": "http://json-schema.org/draft-04/schema#" },
                  "eventConfigSchema": { "$ref": "http://json-schema.org/draft-04/schema#" },
                  "streamConfigSchema": { "$ref": "http://json-schema.org/draft-04/schema#" }
                },
                "required": [
                  "deviceEndpointAdditionalConfigSchema",
                  "datasetConfigSchema",
                  "eventConfigSchema",
                  "streamConfigSchema"
                ]
              }
            },
            "required": [
              "name",
              "version",
              "configSchemas"
            ]
          }
        ]
      }
    },
    "required": [
      "name",
      "version",
      "image",
      "minimum_kubernetes_version",
      "aioConfig",
      "protocols"
    ]
  }